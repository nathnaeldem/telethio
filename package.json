{
  "name": "telethio",
  "version": "0.1.0",
  "description": "A minimal TypeScript Telegram Bot API library: polling + webhooks.",
  "license": "MIT",
  "author": "",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "telegram",
    "telegram-bot-api",
    "bot",
    "webhook",
    "long-polling",
    "typescript"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "example:echo": "tsx examples/echo.ts",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.6.3",
    "@types/node": "^20.11.30",
    "tsx": "^4.19.0"
  }
}
